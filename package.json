{
  "name": "@anontown/server-root",
  "private": true,
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.7.1",
    "typescript": "^4.8.2"
  },
  "scripts": {
    "lint": "eslint --ext .ts,.tsx packages/*/src",
    "lint:fix": "eslint --ext .ts,.tsx --fix packages/*/src",
    "format:check": "prettier --check packages/*/src/**/*.ts",
    "format": "prettier --write packages/*/src/**/*.ts",
    "dev": "npm run dev -w @anontown/server",
    "build": "npm run build -w @anontown/server",
    "start": "npm run start -w @anontown/server"
  },
  "workspaces": [
    "packages/server"
  ]
}
